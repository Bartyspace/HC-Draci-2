---
// Můžete zde definovat proměnné nebo importovat data
type IconType = 'play' | 'document' | 'info';

const newsItems = [
    {
        date: '15. 11. 2023',
        title: 'Vítězství v derby!',
        content: 'Náš tým zvítězil v napínavém derby proti rivalům 3:2 po prodloužení.',
        icon: 'play' as IconType
    },
    {
        date: '10. 11. 2023',
        title: 'Nový hráč v týmu',
        content: 'S radostí oznamujeme příchod nové posily do našeho týmu - Tomáš Novák.',
        icon: 'document' as IconType
    },
    {
        date: '5. 11. 2023',
        title: 'Změna času tréninků',
        content: 'Od příštího týdne se mění časy tréninků. Nový rozpis najdete v článku.',
        icon: 'info' as IconType
    }
];

// Funkce pro výběr ikony
const getIcon = (iconName: 'play' | 'document' | 'info') => {
    const icons = {
        play: '<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd"></path>',
        document: '<path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd"></path>',
        info: '<path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2h-1V9a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>'
    };
    return icons[iconName] || icons.info;
};
---

<section id="news" class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12 text-gray-800">Aktuální novinky</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {newsItems.map(item => (
                <div class="bg-white rounded-lg overflow-hidden shadow-md transition duration-300 hover:shadow-lg hover:-translate-y-1">
                    <div class="h-48 bg-blue-900 relative">
                        <div class="absolute inset-0 flex items-center justify-center">
                            <svg class="w-20 h-20 text-white opacity-30" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                <Fragment set:html={getIcon(item.icon)} />
                            </svg>
                        </div>
                    </div>
                    <div class="p-6">
                        <span class="text-red-600 font-semibold text-sm">{item.date}</span>
                        <h3 class="font-bold text-xl mt-2 mb-3">{item.title}</h3>
                        <p class="text-gray-600 mb-4">{item.content}</p>
                        <a href="#" class="text-blue-900 font-medium hover:text-red-600 transition duration-300">Číst více →</a>
                    </div>
                </div>
            ))}
        </div>
        
        <div class="text-center mt-10">
            <a href="#" class="inline-block bg-blue-900 hover:bg-blue-800 text-white font-medium py-2 px-6 rounded-full transition duration-300">
                Všechny novinky
            </a>
        </div>
    </div>
</section>