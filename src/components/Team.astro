const players = [
    {
        name: 'Jan Novák',
        position: 'Kapitán',
        stats: [
            { value: '15', label: 'Zápasů' },
            { value: '8', label: 'Gólů' },
            { value: '12', label: 'Asistencí' }
        ]
    },
    {
        name: 'Petr Svoboda',
        position: 'Brankář',
        stats: [
            { value: '14', label: 'Zápasů' },
            { value: '92%', label: 'Úspěšnost' },
            { value: '3', label: 'Nuly' }
        ]
    },
    {
        name: 'Martin Dvořák',
        position: 'Útočník',
        stats: [
            { value: '15', label: 'Zápasů' },
            { value: '12', label: 'Gólů' },
            { value: '5', label: 'Asistencí' }
        ]
    },
    {
        name: 'Jakub Černý',
        position: 'Obránce',
        stats: [
            { value: '15', label: 'Zápasů' },
            { value: '2', label: 'Gólů' },
            { value: '7', label: 'Asistencí' }
        ]
    }
];
---

<section id="team" class="py-16 bg-white">
    <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12 text-gray-800">Náš tým</h2>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            {players.map(player => (
                <div class="bg-white rounded-lg overflow-hidden shadow-md transition duration-300 hover:shadow-lg hover:-translate-y-2">
                    <div class="h-64 bg-gray-200 relative">
                        <div class="absolute inset-0 flex items-center justify-center">
                            <svg class="w-24 h-24 text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                            </svg>
                        </div>
                    </div>
                    <div class="p-4 text-center">
                        <h3 class="font-bold text-xl mb-1">{player.name}</h3>
                        <p class="text-red-600 font-medium mb-2">{player.position}</p>
                        <div class="flex justify-center space-x-4 mt-3">
                            {player.stats.map(stat => (
                                <div class="text-center">
                                    <span class="block text-2xl font-bold text-blue-900">{stat.value}</span>
                                    <span class="text-sm text-gray-500">{stat.label}</span>
                                </div>
                            ))}
                        </div>
                    </div>
                </div>
            ))}
        </div>
        
        <div class="text-center mt-10">
            <a href="#" class="inline-block bg-blue-900 hover:bg-blue-800 text-white font-medium py-2 px-6 rounded-full transition duration-300">
                Celý tým
            </a>
        </div>
    </div>
</section>